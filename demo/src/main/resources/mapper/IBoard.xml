<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.Dao.IBoard">


    <select id="list" resultType="com.example.demo.Dto.BoardDto">
        select * from board;
    </select>

	<insert id="insert">
        INSERT INTO board (title, content, writer, date, password)
	   	    values(
	   	    #{title},#{content},#{writer},NOW(),#{password}
	   	    )          
    </insert>
	
	<select id="view" resultType="com.example.demo.Dto.BoardDto">
        select * from board where board_num=#{board_num};
    </select>
    
     <delete id="delete">
     	 delete from board where board_num=#{board_num};      
    </delete>
    
		
</mapper>